-- Create ForceDashes tab
local ForceDashesTab = Window:MakeTab({
    Name = "Force Dashes üèÉ",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false,
    BorderColor = Color3.fromRGB(255, 0, 0)  -- Red border
})

-- Force Right Dash button
ForceDashesTab:AddButton({
    Name = "Activate Force Right Dash",
    Callback = function()
        toggleForceAction("ForceRightDash", function()
            local players = game:GetService("Players")
            local localPlayer = players.LocalPlayer
            while forceState.ForceRightDash do
                local allPlayers = players:GetPlayers()
                for _, player in ipairs(allPlayers) do
                    if player.Character and player.Character:FindFirstChild("Network") then
                        local args = {
                            [1] = {
                                ["Request"] = "SideDashEffects",
                                ["Direction"] = "Right"
                            }
                        }
                        pcall(function()
                            player.Character.Network:FireServer(unpack(args))
                        end)
                    end
                end
                wait(0.1)  -- Shortened wait time to reduce load
            end
        end)
    end
})

